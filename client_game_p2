### This file is the main game loop for player 2

# Importing modules from the main
from main import *
from client import *
from game import *

# Class for the game
class Client_Game():

    def __init__(self,play):
        self.play = play
        if hasattr(c, 'player1') and c.player1 is not None:
            self.x = c.player1.x
            self.y = c.player1.y


    # x setter method
    def set_x(self,new_x):
        self.x = new_x

        
    # y setter method
    def set_y(self,new_y):
        self.y = new_y


    # Method to print data
    def output_data(self,data):
        print(data)


    # Method used to split the coordinates tuple into its x and y components
    def split_coordinates(self,data):
        x = data[0]
        self.set_x(x)
        c.player1.x = x

        y = data[1]
        self.set_y(y)
        c.player1.y = y


    # Method used to check if data is the coordinates or not
    def is_coordinate(self,data):
        if type(data) == tuple:
            return True
        else:
            return False


    # Method used to run the main game loop
    def run(self):
        while self.play == True:

            # Checking if the quit button has been pressed
            for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    c.client.close()
                    print("THIS CLIENT IS NOW DISCONNECTED")
                    pygame.quit()
                    sys.exit()

            # Handling player movement input
            for event in pygame.event.get():
                if event.type == pygame.KEYDOWN:
                    if event.key == pygame.K_RIGHT:
                        c.player2.x += 10
                        print("TRUE")
                    elif event.key == pygame.K_LEFT:
                        c.player2.x -= 10
                    elif event.key == pygame.K_DOWN:
                        c.player2.y += 10
                    elif event.key == pygame.K_UP:
                        c.player2.y -= 10


            # Sending player coordinates to the server
            c.send_object(c.player2)


            try:
                data = c.receive_message()
                # Checking if the received data is a coordinate
                coordinate = self.is_coordinate(data)

                # Splitting coordinates or outputting data
                if coordinate:
                    self.split_coordinates(data)
                else:
                    self.output_data(data)
            except Exception as e:
                print(f"Error receiving message: {e}")


            # Drawing game elements: 
            g.draw()

            c.player1.draw_player(g.screen)  # Draw player1
            c.player2.draw_player(g.screen)  # Draw player2

            # Updating the screen
            g.update_screen()

            # Clockspeed
            clock.tick(60)

#--------------------------------- MAIN ---------------------------------#

# Calling my classes and creating instances of them
c = Client()
g = Game()

cg = Client_Game(True)
cg.run()
