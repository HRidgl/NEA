import pygame
import sys
import time
from game import *
from client import *

class Client_Game:
    def __init__(self, client):
        self.client = client
        pygame.init()
        self.clock = pygame.time.Clock()

    def run(self):
        last_sent_time = time.time()
        while True:
            for event in pygame.event.get():
                if event.type == pygame.QUIT:
                    pygame.quit()
                    sys.exit()
                elif event.type == pygame.KEYDOWN:
                    if event.key == pygame.K_RIGHT:
                        self.client.player2.x += 10
                    elif event.key == pygame.K_LEFT:
                        self.client.player2.x -= 10
                    elif event.key == pygame.K_DOWN:
                        self.client.player2.y += 10
                    elif event.key == pygame.K_UP:
                        self.client.player2.y -= 10

            # Send player position to server at intervals
            if time.time() - last_sent_time > 0.1:
                self.client.send_object(self.client.player2)
                last_sent_time = time.time()

            # Draw and update screen
            # Assuming you have a Game class instance `g` that manages the display
            g.draw()  # Draws the background
            self.client.player2.draw(g.screen)
            self.client.player1.draw(g.screen)
            g.update_screen()

            # Maintain a steady frame rate
            self.clock.tick(60)

# Run the game loop
c = Client()
g = Game()
client_game = Client_Game(c)
client_game.run()
